{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Streamlined Claims Storm Data Schema",
  "type": "object",
  "required": ["property_info", "claims_summary", "significant_events"],
  "properties": {
    "property_info": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "properties": {
        "latitude": {"type": "number"},
        "longitude": {"type": "number"}
      }
    },
    "claims_summary": {
      "type": "object",
      "required": ["total_significant_events", "search_radius_miles", "highest_severity", "assessment_period"],
      "properties": {
        "total_significant_events": {"type": "integer"},
        "search_radius_miles": {"type": "integer"},
        "highest_severity": {
          "type": "string",
          "enum": ["none", "moderate", "severe", "extreme"]
        },
        "assessment_period": {"type": "string"}
      }
    },
    "significant_events": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["event_date", "event_type", "severity_level", "distance_miles"],
        "properties": {
          "event_date": {"type": "string", "format": "date"},
          "event_type": {
            "type": "string",
            "enum": ["significant_wind", "large_hail", "damage_report", "severe_storm"]
          },
          "severity_level": {
            "type": "string",
            "enum": ["moderate", "severe", "extreme"]
          },
          "distance_miles": {"type": "number"},
          "wind_speed_mph": {"type": ["number", "null"]},
          "hail_size_inches": {"type": ["number", "null"]},
          "damage_description": {"type": ["string", "null"]},
          "damage_potential": {
            "type": "string",
            "enum": ["roof_damage_likely", "siding_damage_possible", "window_damage_risk", "structural_concern", "minor_impact"]
          },
          "storm_system_name": {"type": ["string", "null"]}
        }
      }
    },
    "risk_assessment": {
      "type": "object",
      "properties": {
        "overall_risk_level": {
          "type": "string",
          "enum": ["low", "moderate", "high", "very_high"]
        },
        "primary_hazards": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["wind", "hail", "flooding", "tornado"]
          }
        },
        "claims_likelihood": {
          "type": "string",
          "enum": ["unlikely", "possible", "probable", "high_probability"]
        }
      }
    }
  }
}